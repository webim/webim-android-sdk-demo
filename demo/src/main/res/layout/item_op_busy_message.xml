<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/message_body"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/item_service_massage_main_margin"
    android:layout_marginRight="@dimen/item_service_massage_main_margin"
    android:layout_marginBottom="@dimen/item_massage_paddingBottom"
    android:foregroundGravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_message_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:autoLink="all"
        android:background="@drawable/background_info_message"
        android:gravity="center"
        android:linksClickable="true"
        android:textColor="@color/systemMsg"
        android:textIsSelectable="false"
        android:textSize="@dimen/text_size_small"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:lineSpacingExtra="@dimen/line_spacing_normal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_message_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/message_time_marginTop"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:text="@string/default_date"
            android:textAlignment="center"
            android:textColor="@color/systemMsgTime"
            android:textSize="@dimen/text_size_small"
            android:visibility="gone" />

        <TextView
            android:id="@+id/text_message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/message_time_marginTop"
            android:text="@string/default_time"
            android:textAlignment="center"
            android:textColor="@color/systemMsgTime"
            android:textSize="@dimen/text_size_small"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>